        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
            
          },
          {
            "type": "text",
            "id": "number",
            "label": "Number"
           
          },
          {
            "type": "text",
            "id": "unit",
            "label": "Unit"
           
          },
          {
