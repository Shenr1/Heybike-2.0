<section class="Bicycle-Introduction {{ section.id }}">
    <div id="freedom" class="freedom">
        <div class="centeral-content">
          <div class="u42DemiBold_v2">{{ section.settings.title | escape }}</div>

          <div class="values">


            {% for block in section.blocks %}
            {%- case block.type -%}
            {%- when 'image' -%}
            <div class="u36DemiBold_content">
                <div class="u36DemiBold_image">
                    <img src="{{ block.settings.image | img_url: 'master' }}" alt="">
                </div>
                <div class="u36DemiBold_text">
                    <span class="u36DemiBold_v2">{{ block.settings.number }}
                      <span class="u17Light_v2">{{ block.settings.unit }}</span>
                    </span>
                    <span class="u17Light_v2">{{ block.settings.remarks }}</span>
                  </div>
            </div>
            {%- endcase -%}
            {% endfor %}
          </div>
          <div class="values2">
            
            {% for block in section.blocks %}
            {%- case block.type -%}
            {%- when 'functionality' -%}
            <div>
              <span class="u17Medium_v2">{{ block.settings.vantage_one }}</span>
              <span class="u17Medium_v2">{{ block.settings.vantage_two }}</span>
            </div>
            {%- endcase -%}
            {% endfor %}
          </div>
        </div>
      </div>


</section>


