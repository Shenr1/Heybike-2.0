{%- assign secSt = section.settings -%}

{%- if settings.breadcrumb_pg -%}{%- render 'breadcrumb' -%}{%- else -%}<div class="topSpace"></div>{%- endif -%}

<div class="clbox cl{{ section.id }} {{section.settings.style}}{% unless section.settings.section_width %} page-width{% else %} fullwidth{% endunless %}" id="{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="masonary">
  
  <h1 class="page-title">{{ section.settings.page_title }}</h1>   
 
  {%- assign blocks = section.blocks | sort: 'collection.all_products_count' -%}	
{%- capture styles -%}
    --dtcl:{{secSt.cl}};
    --dtbg:{{secSt.bg | color_modify:'alpha', secSt.bgo}};   
    --dtbgm:{{secSt.bg}};
    --dtbdr:{{secSt.bdr}}px;
    --dttfs:{{secSt.tfs}}px;
    --dttfsm:{{secSt.tfsm | divided_by: 100.0 }}rem;
    --dttff:var(--{{secSt.tff}});
    --dttfw:{{secSt.tfw}};
    --dttlh:{{secSt.tlh}};
{% endcapture %}
  <div class="grid gspace rwcols-{{secSt.mobile-grid}} rwcols-md-{{secSt.tablet-grid}} rwcols-lg-{{secSt.grid}} grid-masonary tc"
    style="--grsp:0 -{{ secSt.grid-spacing | divided_by: 2.0  }}px;--grspi:0 {{ secSt.grid-spacing | divided_by: 2.0  }}px {{secSt.grid-spacing}}px;--grspm:0 -{{ secSt.grid-spacing-mbl | divided_by: 2.0  }}px;--grspim:0 {{ secSt.grid-spacing-mbl | divided_by: 2.0  }}px {{secSt.grid-spacing-mbl}}px;{{styles}}">
    <div class="grid-sizer-{{section.id}} rwcols-{{secSt.mobile-grid}} rwcols-md-{{secSt.tablet-grid}} rwcols-lg-{{secSt.grid}}"></div>
    
    {% if section.settings.display_type == 'all' %}
      {% case section.settings.sort %}
      {% when 'products_high' or 'products_low' %}
      {%- assign collections = collections | sort: 'all_products_count' -%}
      {% when 'date' or 'date_reversed' %}
      {%- assign collections = collections | sort: 'published_at' -%}
    {% endcase %}

    {% if section.settings.sort == 'products_low' or section.settings.sort == 'date' or section.settings.sort == 'alphabetical' %}
        {% for collection in collections %}       		           
        <div class="gitem ms-item rwcols-{{secSt.mobile-grid}} rwcols-md-{{secSt.tablet-grid}} rwcols-lg-{{secSt.grid}}">
          {% include 'collection-grid-item-list-page', collection_image_size: image_size, secSt: section.settings %}
        </div>
        {% endfor %}
        {% else %}
        {% for collection in collections reversed %}
        <div class="gitem ms-item rwcols-{{secSt.mobile-grid}} rwcols-md-{{secSt.tablet-grid}} rwcols-lg-{{secSt.grid}}">
          {% include 'collection-grid-item-list-page', collection_image_size: image_size, secSt: section.settings %}
        </div>
        {% endfor %}
    {% endif %}

    {% else %}
        {% for block in section.blocks %}
        <div class="gitem ms-item rwcols-{{secSt.mobile-grid}} rwcols-md-{{secSt.tablet-grid}} rwcols-lg-{{secSt.grid}}">
          {%- assign collection = collections[block.settings.collection] -%}
          {% include 'collection-grid-item-list-page', collection_image_size: image_size, blkSt: block.settings, secSt: section.settings %}
        </div>
        {% endfor %}
    {% endif %}
  </div>
</div>
{% schema %}
  {
    "name": "Collections List Page",
    "settings": [
	 {
		"type":"checkbox",
		"id":"section_width",
		"label":"Fullwidth?",
		"default": true
	  },   
 	  {
            "label": "Page Title",
            "id": "page_title",
            "type": "textarea",
			"default":"Collections"
      },
      {
        "type": "select",
        "id": "display_type",
        "label": "Select Collections to Show",
        "default": "all",
		"info":"All collections are listed by default. To customize your list, choose 'Selected' and add collections.",
        "options": [
          {
            "value": "all",
            "label": "All"
          },
          {
            "value": "selected",
            "label": "Selected"
          }
        ]
	  },
      {
        "type": "select",
        "id": "sort",
        "label": "Sort Collections By:",
        "info": "Sorting only applies when 'All' is selected",
        "default": "alphabetical",
        "options": [
          {
            "value": "products_high",
            "label": "Product count, high to low"
          },
          {
            "value": "products_low",
            "label": "Product count, low to high"
          },
          {
            "value": "alphabetical",
            "label": "Alphabetically, A-Z"
          },
          {
            "value": "alphabetical_reversed",
            "label": "Alphabetically, Z-A"
          },
          {
            "value": "date",
            "label": "Date, old to new"
          },
          {
            "value": "date_reversed",
            "label": "Date, new to old"
          }
        ]
      },  
	  {
		"type":"checkbox",
		"id":"product_count",
		"label":"Show Products Count",
		"default": true
	  },     
 	 {
        "type": "header",
        "content": "Grid ===="
      },      
	  {
        "type": "range",
        "id": "grid-spacing",
        "label": "Grid Spacing",
        "default": 4,
        "min": 0,
        "max": 30,
        "step": 1,
		"unit":"px",
		"info":"Space between two box/grid"
      },
	  {
        "type": "range",
        "id": "grid-spacing-mbl",
        "label": "Grid Spacing Mobile",
        "default": 4,
        "min": 0,
        "max": 30,
        "step": 1,
		"unit":"px",
		"info":"Space between two box/grid"
      },
      {
        "type": "select",
        "id": "style",
        "label": "Grid Style",
        "default": "st1",
        "options": [
			{ "value": "st1", "label": "Style 1" },
			{ "value": "st2", "label": "Style 2" },
			{ "value": "st3", "label": "Style 3" },
			{ "value": "st4", "label": "Style 4" },
			{ "value": "st5", "label": "Style 5" },
			{ "value": "st6", "label": "Style 6" }
        ]
      },
	  {
        "type": "paragraph",
        "content": "=== Collections per row ==="
      }, 	
      {
        "type": "range",
        "id": "grid",
        "label": "Desktop",
        "default": 4,
        "min": 2,
        "max": 7,
        "step": 1
      },
      {
        "type": "range",
        "id": "tablet-grid",
        "label": "Tablet",
        "default": 3,
        "min": 1,
        "max": 5,
        "step": 1
      },
      {
        "type": "range",
        "id": "mobile-grid",
        "label": "Mobile",
        "default": 2,
        "min": 1,
        "max": 3,
        "step": 1
      },      	  
	  {
        "type": "paragraph",
        "content": "Title Text ==="
      },
      {
        "type": "range",
        "id": "tfs",
        "label": "Font Size",
        "default": 18,
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px"
      },
      {
          "type": "range",
          "id": "tfsm",
          "label": "Font Size (mobile)",
          "default": 100,
          "min": 0,
          "max": 500,
          "step": 5,
          "unit": "%"
      },
    {
        "type": "select",
        "id": "tff",
        "label": "Font Family",
        "default": "ft1",
        "options": [
            {
                "value": "ft1",
                "label": "Font 1"
            },
            {
                "value": "ft2",
                "label": "Font 2"
            },
            {
                "value": "ft3",
                "label": "Font 3"
            }
        ]
    },
    {
        "type": "select",
        "id": "tfw",
        "label": "Font Weight",
        "default": "400",
        "options": [
            {
                "value": "300",
                "label": "Light"
            },
            {
                "value": "400",
                "label": "Regular"
            },
            {
                "value": "500",
                "label": "Medium"
            },
            {
                "value": "600",
                "label": "Semi Bold"
            },
            {
                "value": "700",
                "label": "Bold"
            }
        ]
    }, 	
    {
        "type": "range",
        "id": "tlh",
        "label": "Line Height",
        "default": 1.2,
        "min": 1.0,
        "max": 2.0,
        "step": 0.1,
        "info": "Space between text lines. Default is set to 1.3"
    },           
	   {
        "type": "color",
        "id": "cl",
        "label": "Title",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "bg",
        "label": "Background",
        "default": "#000"
      },
      {
        "type": "range",
        "id": "bgo",
        "min": 0,
        "max": 1,
        "step": 0.1,
        "label": "Background Opacity",
        "unit": "%",
        "default": 0.7
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          {
            "label": "Collection",
            "id": "collection",
            "type": "collection"
          },
		 {
			"type":"image_picker",
			"id":"custom_image",
			"label":"Upload Image"			
		  },
		  {
 			"type":"textarea",
			"id":"custom_name",
			"label":"Custom Name",
			"info":"use <strong>your text here</strong> for bold font"
		  }
        ]
      }
    ]
  }
{% endschema %}