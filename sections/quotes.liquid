        "default": "#EBB868"		
      },
      {
                    "type": "range",
                    "id": "rfs",
                    "label": "Icons Size",
                    "default": 16,
                    "min": 10,
                    "max": 30,
                    "step": 1,
                    "unit": "px"
                },
      {
		"type":"checkbox",
		"id":"isbox",
		"label":"Add Box?",
		"default": false
	  },
	  {
        "type": "color",
        "id": "qbg",
        "label": "Box Background",
        "default": "#fff"
       },
      {
        "type": "checkbox",
        "id": "autoplay",
        "label": "Auto-rotate slides",
        "default": false
      },
      {
        "type": "range",
        "id": "autoplay_speed",
        "label": "Autoplay Speed",
        "default": 5,
        "min": 1,
        "max": 30,
        "step": 1
      },
	  {
        "type": "checkbox",
        "id": "arrow",
        "label": "Show Next/Previous Arrows?",
        "default": true
      },
	  {
        "type": "color",
        "id": "arwCl",
        "label": "Arrow Color",
        "default": "#000"
      },
	  {
        "type": "checkbox",
        "id": "dots",
        "label": "Show Dotted Navigation?",
        "default": false
      },
	  {
        "type": "color",
        "id": "dotCl",
        "label": "Dots Color",
        "default": "#000"
      }
    ],
    "blocks": [
      {
        "type": "quote",
        "name": "Testimonial",
        "settings": [
 		  {
            "type": "image_picker",
            "id": "image",
            "label": "Upload Image",
			"info":"Style 1 & Style 2: recommended size 100x100. Style 3: recommended size 500x300"
          },
          {
            "type": "richtext",
            "id": "quote",
            "label": "Text",
            "default": "<p>Add customer reviews and testimonials to showcase your storeâ€™s happy customers.</p>"
          },
          {
            "type": "textarea",
            "id": "author",
            "label": "Author",
            "default": "Author's name"
          },
		   {
            "type":"checkbox",
            "id":"display_rat",
            "label":"Display Ratings?",
            "default": true
          },
          {
            "type": "range",
            "id": "rating",
            "label": "Select Rating",
            "default": 5,
            "min": 1,
            "max": 5,
            "step": 1          
          } 	
        ]
      }
    ],
    "presets": [
      {
        "name": "Testimonials",        
        "blocks": [
          {
            "type": "quote"
          },
          {
            "type": "quote"
          },
          {
            "type": "quote"
          }
        ]
      }
    ]
  }
