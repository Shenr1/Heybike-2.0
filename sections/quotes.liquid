        ]
      },
      {
        "type": "color",
        "id": "stcl",
        "label": "Heading",
        "default": "#444"
      }, 	
      {
        "type": "color",
        "id": "qcl",
        "label": "Text",
        "default": "#444"
      },
      {
            "type": "range",
            "id": "qfs",
            "label": "Font Size",
            "default": 15,
            "min": 10,
            "max": 30,
            "step": 1,
            "unit": "px"
        },
				{
					"type": "range",
