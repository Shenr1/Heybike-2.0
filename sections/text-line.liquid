{%- assign secSt = section.settings -%}
<div class="content-indent {{ section.settings.top-offeset}}">    
  <div class="{% if section.settings.fullwidth %}fullwidth npd{% else %}page-width{%endif%}">     
    <div class="section-cover id-{{section.id}} wow fadeIn" style="background-color:{{section.settings.bg}};padding:{{ section.settings.text-padding}}px 10px;">
      <div class="ttlTxt tc" style="--tcl:{{secSt.cl}};--tfs:{{secSt.fs}}px;--tfsm:{{secSt.fsm | divided_by: 100.0 }}rem;--tff:var(--{{secSt.ff}});--tfw:{{secSt.fw}};--tlh:{{secSt.lh}};">
        {%- if section.settings.infolines != blank %}{{ section.settings.infolines }}{%- endif -%}
      </div>
    </div> 
  </div>
</div>   
{% schema %}
  {
    "name": "Text Line",
    "class": "index-section",   	
	"settings":[	
	 {
            "type": "select",
            "id": "top-offeset",
            "label": "Top OffSet",
            "default": "default",
            "options": [
              {
                "value": "default",
                "label": "Default"
              },
              {
                "value": "small",
                "label": "Small"
              },
			  {
                "value": "none",
                "label": "None"
              }
			]
        },	
       {
         "type": "checkbox",
		 "id": "fullwidth",
		 "label": "Fullwidth?",
		 "default": true
      },
      	{
            "type": "color",
            "id": "bg",
            "label": "Background",
			"default":"#fafafa"	
		 },
		 {
            "type": "range",
            "id": "text-padding",
            "label": "Text Padding",
            "min": 5,
            "max": 50,
            "step": 1,
            "unit": "px",
            "default": 20
         },
		{
        "type": "textarea",
        "id": "infolines",
        "label": "Text",
        "default": "Display store promotion text, collection information or store information"	
        },
		{
            "type": "color",
            "id": "cl",
            "label": "Text",
			"default":"#111"	
		 },
      {
                    "type": "range",
                    "id": "fs",
                    "label": "Font Size",
                    "default": 24,
                    "min": 10,
                    "max": 100,
                    "step": 1,
                    "unit": "px"
                },
                {
                    "type": "select",
                    "id": "ff",
                    "label": "Font Family",
                    "default": "ft1",
                    "options": [
                        {
                            "value": "ft1",
                            "label": "Font 1"
                        },
                        {
                            "value": "ft2",
                            "label": "Font 2"
                        },
                        {
                            "value": "ft3",
                            "label": "Font 3"
                        }
                    ]
                },
                {
                    "type": "select",
                    "id": "fw",
                    "label": "Font Weight",
                    "default": "400",
                    "options": [
                        {
                            "value": "300",
                            "label": "Light"
                        },
                        {
                            "value": "400",
                            "label": "Regular"
                        },
                        {
                            "value": "500",
                            "label": "Medium"
                        },
                        {
                            "value": "600",
                            "label": "Semi Bold"
                        },
                        {
                            "value": "700",
                            "label": "Bold"
                        }
                    ]
                }, 	
                {
                    "type": "range",
                    "id": "lh",
                    "label": "Line Height",
                    "default": 1.3,
                    "min": 1.0,
                    "max": 2.0,
                    "step": 0.1,
                    "info": "Space between text lines. Default is set to 1.3"
                }
	
	],
	"presets": [
      {
		 "name": "Text Line"        
	 }
   ]
  }
{% endschema %}

