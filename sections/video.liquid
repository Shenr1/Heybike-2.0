        "default": 55,
        "min": 0,
        "max": 100,
        "step": 1
      },
      {
        "type": "range",
        "id": "pad-ipad",
        "label": "Tablet",
        "default": 15,
        "min": 0,
        "max": 30,
        "step": 1
      },
      {
        "type": "range",
        "id": "pad-mbl",
        "label": "Mobile",
        "default": 10,
        "min": 0,
        "max": 20,
        "step": 1
      },
      {
        "type": "header",
        "content": "YouTube or Vimeo link"
      },
      {
        "type": "video_url",
        "id": "video_url",
        "label": "Video link",
        "accept": [
          "youtube",
          "vimeo"
        ]
      },
      {
        "type": "header",
        "content": "Or MP4 Video [recommended]"
      },
      {
        "type": "textarea",
        "id": "mp4url",
        "label": "Mp4 video link",
        "info": "Paste video url. Upload and copy video url from Settings --> File. Video  size must not exceed 1 GB. It is shopify limit for video"
      },
      {
        "type": "textarea",
        "id": "title",
        "label": "Text",
        "default": "Video Text",
        "info": "Use <strong>text here</strong> to make text bold"
      },
      {
        "type": "color",
        "id": "color_ttl",
        "label": "Text Color",
        "default": "#fff"
      },
      {
        "type": "range",
        "id": "tfs",
        "label": "Font Size",
        "default": 20,
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px"
      },
      {
          "type": "range",
          "id": "tfsm",
          "label": "Font Size (mobile)",
          "default": 100,
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%"
      },
      {
        "type": "checkbox",
        "id": "hide_text",
        "label": "Hide Text in Mobile?",
        "default": false,
        "info": "Due to lack of space on mobile device, We advise to hide button or text "
      },
      {
        "type": "text",
        "id": "btntxt",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "btnurl",
        "label": "Button Url"
      },
      {
        "type": "checkbox",
        "id": "hide_btn",
        "label": "Hide Button in Mobile?",
        "default": false,
        "info": "Due to lack of space on mobile device, We advise to hide button or text "
      },
      {
        "type": "select",
        "id": "btn-style",
        "label": "Select Button",
        "default": "btn",
        "options": [
