{% assign secSt = section.settings %}
<div class="content-indent{% if secSt.hide_mobile %} hide-sm{% endif %} {{ secSt.top-offeset}} wow fadeIn {% render 'section-interva-set' , secSt:secSt %}">
  <div class="wow fadeIn {{secSt.style}}{% unless secSt.section_width %} page-width xl:px-4 px-6{% else %} fullwidth npd{% endunless %}" {% if secSt.section_width %}style="--spd:{{ secSt.pad-desk}}px;--spdt:{{ secSt.pad-ipad}}px;--spdm:{{ secSt.pad-mbl}}px;"{% endif %}>  
  	
   <div class="video-sec {% if secSt.rounded %} md:rounded-section rounded-4xl overflow-hidden{% endif %} {% if secSt.snow_effect %} falling-snow{% endif %}{% if secSt.snow_style == "style2" %} style2{% else %} style1{% endif %}" style="--fs:{{secSt.tfs}}px;--fsm:{{secSt.tfsm | divided_by: 100.0 }}rem;">   
      {% if secSt.video_url == blank and secSt.mp4url == blank	%}
      	<div class="video-wrapper">
          <iframe src="//www.youtube.com/embed/_9VUPq3SxOc?rel=0&showinfo=0&vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe>
        </div>
      {% else %}         
         {% if secSt.video_url.type == "youtube" %}        
         <div class="video-wrapper"><iframe src="//www.youtube.com/embed/{{ secSt.video_url.id }}?rel=0&showinfo=0&vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe></div>
         {% endif %}
         {% if secSt.video_url.type == "vimeo" %}
         <div class="video-wrapper"><iframe src="//player.vimeo.com/video/{{ secSt.video_url.id }}?byline=0&portrait=0&badge=0" width="850" height="480" frameborder="0" allowfullscreen></iframe></div>
         {% endif %}     
     
         {% if secSt.video_url == blank and secSt.mp4url != blank %}
         <video width="100%" autoplay loop muted playsinline>
           <source src="{{secSt.mp4url}}" codecs="avc1.4d002a, mp4a.40.2" type="video/mp4">
           Your browser does not support the video tag.
           </source>
         </video>    
          {% endif %}    
      {% endif %}              
    {%- if secSt.title != blank or secSt.btntxt != blank -%}
    <div class="video-text {{ secSt.text_align }}">
      <span class="ttl{% if secSt.hide_text %} hide-sm{% endif %}" style="color:{{secSt.color_ttl}};">{{ secSt.title }}</span>      
      {% if secSt.btntxt != blank %}
      <a href="{{secSt.btnurl}}" class="btn{% if secSt.hide_btn %} hide-sm{% endif %} {{secSt.btn-style}}" >{{ secSt.btntxt}}</a>
      {% endif %}
    </div>
    {% endif %}
   </div>
  
  </div>  
</div>
