{%- capture productTabs -%}
<div section-name="product-giveaways" class="mt-8 rounded-2xl overflow-hidden">
  <div class="bg-[#f5f5f5] py-4 px-12">
    <ul class="flex text-sm justify-between">
    {% assign pClass = 'text-center' %}
      <li class="{{pClass}}">
        {{ block.icon1 | img_url: '100x' | img_tag }}
        <p>{{ block.text1 }}</p>
      </li>
      <li class="{{pClass}}">
        {{ block.icon2 | img_url: '100x' | img_tag }}
        <p>{{ block.text2 }}</p>
      </li>
      <li class="{{pClass}}">
        {{ block.icon3 | img_url: '100x' | img_tag }}
        <p>{{ block.text3 }}</p>
      </li>
    </ul>
  </div>
</div>
{%- endcapture -%}
{{ productTabs | strip_newlines | remove: "  " | remove: "	" }}