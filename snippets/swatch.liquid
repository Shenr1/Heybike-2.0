{% capture colorSwatches %}
{%- liquid
	assign optg = optindex | plus: 1
	assign downcased_option = swatch.name | downcase
	assign is_color = false

	assign colorOptions = settings.colorOpt | downcase | replace:", ","," | replace:" , ","," | replace:" ,","," | split: ","
	if colorOptions contains downcased_option
		assign is_color = true 
	endif
-%}

<div class="swatch pvOpt{{optindex}} fl f-wrap option{{optg}} mb15 w_100" data-option-index="{{ optindex }}">
	<label class="header w_100 fl text-lg !normal-case !font-semibold text-black-500">
        {{ swatch.name }}- <span class="slVariant ml5">{{swatch.selected_value}}</span>
        {%- if sizechart -%}
            <a href="#sizechart" class="mfp sizelink ml_auto" data-effect="mfp-zoom-in"><i class="at at-ruler"></i> {{ 'products.product.size_chart' | t}}</a>
        {%- endif -%}
    </label>
	{% assign values = '' %}
	{% for variant in product.variants %}
		{% assign value = variant.options[optindex] %}
		{% unless values contains value %}
			{% assign values = values | join: ',' %}
			{% assign values = values | append: ',' | append: value %} 
			{% assign values = values | split: ',' %}
			{% assign colorname = value | handleize %}
			<div data-value="{{ value | escape }}" class="swatch-element">
			<input class="swatchInput dn single-option-selector-{{secId}}{% if is_color %} colorsw{% endif %}" id="{{product.id}}-{{ optg }}-{{ value | handle }}" data-index="option{{optg}}" data-var="{{ value | handle }}" type="radio" name="{{ swatch.name | handle }}" value="{{ value | escape }}"{% if swatch.selected_value == value %} checked{% endif %} />
			{% if is_color %}
                {% if settings.sw_type == "color" %}
                    <label class="swatchLbl color !shadow-[inset_0px_0px_0px_3.5px_white] {{settings.sw_size}} swt{{value | handle}}" for="{{product.id}}-{{ optg }}-{{ value | handle }}" style="background-color:{{ value | handle }};"></label>
                {% else %}
                    <label class="swatchLbl color !shadow-[inset_0px_0px_0px_3.5px_white] {{settings.sw_size}} lazyload" for="{{product.id}}-{{ optg }}-{{ value | handle }}" data-bgset="{{ variant.image.src | product_img_url: '100x'}}" data-sizes="auto" data-parent-fit="contain"></label>
                {% endif %}
                <span class="tooltip-label top">{{ value }}</span>
			{% else %}
			    <label class="swatchLbl w-16" for="{{product.id}}-{{ optg }}-{{ value | handle }}">{{ value }}</label>            	
			{% endif %}
			</div>
		{% endunless %}
	{% endfor %}
</div>

{% comment %} TEMWAYS的不采用了0524 {% endcomment %}
{% comment %} {% if optindex == 0 %}
	<div class="w-full rounded-2xl overflow-hidden shadow mb-12 mt-2">
		<p class="bg-black-900 m-0 py-2 px-6 text-lg text-white font-semibold">Exclusive Offer</p>
		<p class="py-3 px-6 m-0 text-base text-black-600">Order now, get FREE Mudguards & Kickstand!</p>

		<div class="text-base flex px-6 pb-4">
			{% for item in (1..3) %}
				<div class="relative felx flex-col text-center mx-2 first:ml-0 last:mr-0">
					<div class="absolute top-2 left-2 bg-black-900 text-white text-xs px-2 py-1 rounded-full">FREE</div>
					<img class="block" src="https://dummyimage.com/150x120/2dd4bf26/fff">
					<p class="mb-0 font-semibold">Fender Set</p>
					<p class="mb-0 line-through text-black-600">€45</p>
				</div>
			{% endfor %}
		</div>
	</div>
{% endif %} {% endcomment %}
{% endcapture %}
{{colorSwatches | strip_newlines | remove: "  " | remove: "	" }}